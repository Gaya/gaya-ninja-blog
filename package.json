{
  "name": "gaya-pizza",
  "version": "1.0.0",
  "description": "Gaya Kessler's weblog",
  "engines": {
    "npm": "6.13.4",
    "node": "13.6.0"
  },
  "dependencies": {
    "glob": "^7.1.6",
    "html-minifier": "^4.0.0",
    "imagemin": "^7.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^8.0.0",
    "imagemin-svgo": "^7.0.0",
    "moment": "^2.24.0",
    "node-neat": "^1.7.2",
    "node-sass": "^4.13.1",
    "replace-in-file": "^5.0.2",
    "typogr": "^0.6.8",
    "uglify-js": "^3.7.7",
    "underscore": "^1.9.2",
    "urlencode": "^1.1.0",
    "wintersmith": "^2.1.0",
    "wintersmith-nunjucks": "^2.0.0"
  },
  "scripts": {
    "clean": "rm -rf ./public && mkdir public",
    "build:wintersmith": "node ./scripts/wintersmith.js",
    "prebuild:js": "mkdir ./public/js",
    "build:js": "uglifyjs -c toplevel -m -o ./public/js/gaya-pizza.js -- ./src/js/main.js",
    "images:copy": "cp -r ./src/images ./public",
    "images:minify": "node ./scripts/imagemin.js",
    "sass": "node ./scripts/sass.js",
    "html:minify": "html-minifier --input-dir ./public --output-dir ./public --file-ext html --collapse-whitespace",
    "prebuild": "npm run clean",
    "build": "npm run build:wintersmith && npm run build:js && npm run images:copy && npm run sass",
    "postbuild": "npm run images:minify && npm run html:minify",
    "preserve": "npm run build",
    "serve": "serve ./public"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:Gaya/gaya.pizza.git"
  },
  "author": "Gaya Kessler",
  "license": "MIT",
  "devDependencies": {
    "serve": "^11.3.0"
  }
}
